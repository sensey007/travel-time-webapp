{
  "env": { "browser": true, "es2022": true, "node": true, "jest": true },
  "extends": ["standard"],
  "parserOptions": { "ecmaVersion": 2022, "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["warn", {"argsIgnorePattern": "^_"}],
    "semi": ["error", "always"],
    "quotes": ["error", "single", {"avoidEscape": true}]
  }
}

